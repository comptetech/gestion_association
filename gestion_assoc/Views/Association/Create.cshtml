@{
    ViewData["Title"] = "Ajouter une association";
}

<div class="container">

    <!-- Page-Title -->
    <div class="row">
        <div class="col-sm-12">
            <h4 class="pull-left page-title">Association</h4>
            <ol class="breadcrumb pull-right">
                <li><a href="#">Moltran</a></li>
                <li><a href="#">Association</a></li>
                <li class="active">Ajouter une association</li>
            </ol>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-default">
                <div class="panel-heading"><h3 class="panel-title">Ajouter une association</h3></div>
                <div class="panel-body">
                    <form class="form-horizontal" role="form">
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="nom">Nom</label>
                            <div class="col-md-10">
                                <input type="text" class="form-control" id="nom" placeholder="Saisir le nom de l'association">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="adresse">Adresse</label>
                            <div class="col-md-10">
                                <input type="text" class="form-control" id="adresse" placeholder="Saisir l'adresse de l'association">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="telephone">Téléphone</label>
                            <div class="col-md-10">
                                <input type="tel" class="form-control" id="telephone" placeholder="Saisir le numéro de téléphone de l'association">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="membre">Membres</label>
                            <div class="col-md-10">
                                <input type="number" class="form-control" id="membre" placeholder="Saisir le nombre de membres de l'association">
                            </div>
                        </div>
                        <div class="container">
                            <div class="row">
                                <div class="col text-center">
                                    <button type="submit" class="btn btn-primary btn-custom waves-effect waves-light m-b-5 btn-lg">Ajouter</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div> <!-- panel-body -->
            </div> <!-- panel -->
        </div> <!-- col -->
    </div>
</div> <!-- container -->