@{
    ViewData["Title"] = "Liste des actrivités";
}


<div class="container">

    <!-- Page-Title -->
    <div class="row">
        <div class="col-sm-12">
            <h4 class="pull-left page-title">Activité</h4>
            <ol class="breadcrumb pull-right">
                <li><a href="#">Moltran</a></li>
                <li><a href="#">Activité</a></li>
                <li class="active">Listes des activités</li>
            </ol>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Liste des activités</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <table id="datatable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>Libellé</th>
                                        <th>Date début</th>
                                        <th>Date de fin</th>
                                        <th>Lieu</th>
                                        <th>Type d'activité</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>


                                <tbody>
                                    <tr>
                                        <td>Yendou</td>
                                        <td>14/03/2022</td>
                                        <td>18/03/2022</td>
                                        <td>Pikine</td>
                                        <td>Collecte de fonds</td>
                                        <td class="actions">
                                            <a asp-controller="Activity" asp-action="Show" class=""><i class="fa fa-eye text-success"></i></a>
                                            <a asp-controller="Activity" asp-action="Update" class=""><i class="fa fa-pencil text-primary"></i></a>
                                            <a href="#" class=""><i class="fa fa-trash-o text-danger"></i></a>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div> <!-- End Row -->


</div>